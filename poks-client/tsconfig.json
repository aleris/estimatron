{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["poks-client/src/*"],
      "@server/*": ["poks-server/src/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
